@model List<Fada>
@{
    ViewData["Title"] = "Home";
    var tipos = (List<Tipo>)ViewData["Tipos"];
    string Cor(string nome)
    {
        return tipos
            .Where(t => t.Nome == nome)
            .Select(t => t.Cor)
            .FirstOrDefault();
    }
}

<section class="pt-5 pb-3 text-center container">
    <div class="row">
        <div class="col mx-auto">
            <h1>Tinkerdex</h1>
            <div class="group">
                <button id="btn-all" class="btn btn-md my-2 text-white bg-dark btn-filter"
                    onclick="filter('all')">
                    Ver Todos
                </button>
                @foreach (var tipo in tipos)
                {
                <button id="btn-@tipo.Nome" class="btn btn-sm my-2 text-white btn-filter"
                    style="background-color:@tipo.Cor">
                    @tipo.Nome
                </button>
                }
            </div>
        </div>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">

            @foreach (var fada in Model)
            {
            <!-- Card Pokemon - Inicio -->
            <div class="col" onclick="window.location = '/Home/Details/@fada.Numero'">
                <div class="card shadow-sm cursor-pointer @string.Join(' ', fada.Tipo)">
                    <img src="@fada.Imagem" class="card-img-top" width="100%" height="380" alt="Bulbasaur" />
                    <div class="card-body">
                        <p class="card-text mb-0">Nº @fada.Numero.ToString("000")</p>
                        <h3 class="card-title">@fada.Nome</h3>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                @foreach (var tipo in fada.Tipo)
                                {
                                <a href="#" class="btn my-2 text-white"
                                    style="background-color:@Cor(tipo)"
                                    onclick="filter('@tipo')">@tipo</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Card Pokemon - Fim -->
            }

            <div id="zeroPokemon" class="col-lg-12 text-center d-none">
                <h1 class="my-3 text-danger">Nenhuma Fada Encontrada</h1>
            </div>
        </div>


    </div>
</div>
